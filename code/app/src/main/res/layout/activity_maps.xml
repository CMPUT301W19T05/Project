<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MapsActivity" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp">
        <fragment
            android:id="@+id/location_auto_search"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right|bottom">

        <Button
            android:id="@+id/submit_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_gap"
            android:text="submit"
            android:layout_gravity="center"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/goto_my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/common_google_signin_btn_text_dark"
            android:clickable="true"
            android:layout_margin="@dimen/default_gap"
            map:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            map:srcCompat="@drawable/vector_drawable_target"
            android:focusable="true" />

    </LinearLayout>


</FrameLayout>
