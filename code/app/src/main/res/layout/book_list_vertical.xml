<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/rearch_res_cover"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/rearch_res_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rearch_res_cover"
        android:text="title" />

    <TextView
        android:id="@+id/rearch_res_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rearch_res_title"
        android:layout_toRightOf="@+id/rearch_res_cover"
        android:text="author" />

    <TextView
        android:id="@+id/rearch_res_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rearch_res_author"
        android:layout_toRightOf="@+id/rearch_res_cover"
        android:text="owner" />


</RelativeLayout>