<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="4dp"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_cover"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/reach_res_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/layout_cover"
            android:text="Title" />

        <TextView
            android:id="@+id/reach_res_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_text"
            android:layout_toRightOf="@+id/layout_cover"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/checkedTab"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/author_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reach_res_title"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/layout_cover"
            android:text="Author" />

        <TextView
            android:id="@+id/reach_res_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_text"
            android:layout_toRightOf="@+id/layout_cover"
            android:singleLine="true"
            android:text="author"
            android:textColor="@color/checkedTab"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/owner_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reach_res_author"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/layout_cover"
            android:text="Owner" />

        <TextView
            android:id="@+id/reach_res_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owner_text"
            android:layout_toRightOf="@+id/layout_cover"
            android:singleLine="true"
            android:text="owner"
            android:textColor="@color/checkedTab"
            android:textSize="17sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>